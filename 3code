#include<stdio.h>
	int main()
	{
	int n,i,search,ct=0,x=0;
	printf("Enter  number of elements: ");
	scanf("%d",&n);
	int a[n];
	printf("\nEnter an element:\n");
	for(i=0;i<n;i++)
	{
	scanf("%d",&a[i]);
	}
	printf("Enter  number to be searched:");
	scanf("%d",&search);
	for(i=0;i<n;i++)
	{
	if(a[i]==search)
	{ printf("%d is at position:%d\n",search,i+1);
	ct=1;
	}
	}
	if(ct==0)
	printf("%d is not in the given array.",search);
	return 0;
	}
	

